@model OrderPizzaVM
@{
    ViewData["Title"] = "Index";
}

<h2>Order Pizza</h2>
<h3 style="color:red">@ViewBag.error</h3>
<form asp-controller="Order" asp-action="Index" method="post">
    @Html.LabelFor(order => order.User.FirstName)
    <input asp-for=@Model.User.FirstName />
    <hr />
    @Html.LabelFor(order => order.User.LastName)
    <input asp-for=@Model.User.LastName />
    <hr />
    @Html.LabelFor(order => order.User.Address) 
    <input asp-for=@Model.User.Address />
    <hr />
    @Html.LabelFor(order => order.User.Phone)
    <input asp-for=@Model.User.Phone />
    <hr />
    <button type="submit">Make Order</button>
</form>

