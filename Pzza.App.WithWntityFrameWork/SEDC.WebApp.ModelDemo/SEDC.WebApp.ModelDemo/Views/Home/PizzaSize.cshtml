@model List<PizzaVM>
@{
    ViewData["Title"] = "PizzaSize";
    
}
<style>
    .row {
        width: 100%;
        height: 50px;
        /* background-color:aqua;*/
        padding-left: 30px;
    }

    .col-lg-1 {
        /*background-color: bisque;*/
        margin-left: 10px;
        text-align: center;
        padding: 10px;
        width: 300px;
        height: 50px;
    }

    .col-lg-2 {
        /*background-color: brown;*/
        margin-left: 10px;
        width: 250px;
        height: 50px;
        text-align: center;
        padding: 10px;
    }

    .col-lg-3 {
        /*background-color: coral;*/
        margin-left: 10px;
        width: 250px;
        height: 50px;
        text-align: center;
        padding: 10px;
    }

    .col-lg-4 {
        /*background-color: darkviolet;*/
        margin-left: 10px;
        width: 250px;
        height: 50px;
        text-align: center;
        padding: 10px;
    }
    h3 {
        font-family: 'Bell MT';
        font-weight: 600;
        font-size: 30px;
        letter-spacing: 2px;
        background-color: darkred;
        color: floralwhite;
        margin: 12px;
        border-radius: 30px;
        text-align: center;
        text-decoration: underline rgba(251, 255, 10, 0.69) double;
    }
    
</style>
<h2>PizzaSize</h2>
<h3>@ViewBag.EmptyText</h3>
<div class="container">
    <div class="row row-cols-4">
        <div class="col-lg-1">
            <a asp-controller="Home" asp-action="PizzaSize" asp-route-id="1">SMALL</a>
        </div>
        <div class="col-lg-2">
            <a asp-controller="Home" asp-action="PizzaSize" asp-route-id="2"> MEDIUM</a>
        </div>
        <div class="col-lg-3">
            <a asp-controller="Home" asp-action="PizzaSize" asp-route-id="3">LARGE</a>
        </div>
        <div class="col-lg-4">
            <a asp-controller="Home" asp-action="PizzaSize" asp-route-id="4">FAMILY</a>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="card">
        <img height="200" src="~/images/@item.Image" class="card-img-top" alt="...">
        <div class="card-body">
            <h2 class="card-title">@item.Name</h2>
            <h5>Price: @item.Price &#36</h5>
            <h5>Size: @item.Size</h5>
            @Html.ActionLink("Order", "Index", "Order", new { id = item.Id }, new { @class = "details" })
        </div>
    </div>
}